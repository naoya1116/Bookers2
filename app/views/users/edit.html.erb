<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>User info</h1>
<% if @user.errors.any? %>
      <div class="alert text-danger">
        <h3> <%= @user.errors.count %> error prohibited this obj from being saved: </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<%= form_with model:@user, local:true do |f| %>
<div class="form-group">
  <label for="input_title">Title</label>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <label for="user_image" >Image</label>
  <input class="form-control-file" type="file" id="formFile">
</div>
<div class="form-group">
  <label for="input_opinion">Introduction</label>
  <%= f.text_area :introduction, class: "form-control" %>
</div>
<div class="form-group">
 <%= f.submit 'Update User',class: "btn btn-secondary" %>
</div>
<% end %>

  </div>
 </div>
</div>