<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
         <div class="row">
           <%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block" ,method: :get do%>
           <i class="fas fa-users-cog"></i>
           <% end %>
         </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>

        <div class="form-group">
          <lable for="book_title">Title</label>
          <input type="text" id="book_title" name="book[title]" class="form-control">
        </div>

        <div class="form-group">
          <lable for="book_opinion">Opinion</label>
          <textarea  id="book_body" name="book[body]" class="form-control" ></textarea>
        </div>

        <div class="form-group">
           <%= f.submit 'Create Book',class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
            <td>
              <!--%= link_to user_path(user.id), method: :get do %>-->
               <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
              <!--% end %>-->
            </td>
            <td>
              <%= link_to book_path(book.id), method: :get do %>
               <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>