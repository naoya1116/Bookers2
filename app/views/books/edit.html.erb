<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label for="input_title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"input_title"%>
  <label for="input_opinion">Opinion</label>
  <%= f.text_area :body %>  
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Edit", edit_book_path(@book) %>
