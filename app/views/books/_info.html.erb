<h2>User info</h2>
       <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format:'jpg', fallback:"no_image.jpg",size:"100x100" %>
       <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th> 
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
         <div class="row">
           <%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block" ,method: :get do%>
           <i class="fas fa-users-cog"></i>
           <% end %>
         </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>

        <div class="form-group">
          <lable for="book_title">Title</label>
          <input type="text" id="book_title" name="book[title]" class="form-control">
        </div>

        <div class="form-group">
          <lable for="book_opinion">Opinion</label>
          <textarea class="form-control" id="book_body" name="book[body]" ></textarea>
        </div>
        
        <div class="form-group">
          <input type="submit" class="btn btn-success" value="Create Book" data-disable-with="Create Book">
        </div>

      <% end %>